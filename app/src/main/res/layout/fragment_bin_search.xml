<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.binsearch.BinSearchFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="90dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alegreya_sc_extra_bold"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="@string/bin_check"
                android:textColor="@color/on_background_primary"
                android:textSize="36sp" />

            <!-- Поле ввода BIN -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/enter_bin"
                android:textColorHint="@color/on_background_secondary"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/on_background_primary"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:counterMaxLength="8"
                app:cursorColor="@color/on_background_primary"
                app:hintTextColor="@color/on_background_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editBin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_medium"
                    android:gravity="center"
                    android:inputType="number"
                    android:letterSpacing="0.1"
                    android:maxLength="8"
                    android:padding="16dp"
                    android:textColor="@color/on_background_primary"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/alegreya_sc_medium"
                android:padding="12dp"
                android:text="@string/search"
                android:textColor="@color/on_primary"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:iconTint="@null" />

            <TextView
                android:id="@+id/buttonHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/alegreya_sc_regular"
                android:foreground="?attr/selectableItemBackground"
                android:letterSpacing="0.4"
                android:minHeight="48dp"
                android:text="@string/history"
                android:textColor="@color/on_background_primary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/starImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/star_icon" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>